@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Travel Agency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">


    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/TravelAgencySystemWeb.styles.css" asp-append-version="true" />
</head>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" style="background-image: none;background-color: rgba(31, 130, 127, 0.9);" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center navbar-brand" style="color: rgb(255 216 0); font-weight:bold;" asp-area="" asp-controller="Home" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i href="/"><img style="height: 40px; margin-left: 16px" src="https://clipart-library.com/images_k/travel-clipart-transparent/travel-clipart-transparent-13.png" /></i>
                </div>
                <div class="sidebar-brand-text mx-3">
                    TravelAgency
                </div>
            </a>

            
                


            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-target="#collapseTwo"
                   aria-expanded="true" aria-controls="collapseTwo" display: flex; align-items: center;" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home" style="font-size: .9em; width: 20px; height: 20px;"></i>
                    <span style="font-size: .9em; margin-right: 4px;">@Localizer["HomeSideBarTab"]</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                @Localizer["TitleSideBarTab"]
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-target="#collapseTwo"
                   aria-expanded="true" aria-controls="collapseTwo" display: flex; align-items: center; asp-area="" asp-controller="Users" asp-action="Index">
                    <i class="fas fa-users" style="font-size: .9em; width: 20px; height: 20px;"></i>
                    <span style="font-size: .9em; ">@Localizer["UserSideBarTab"]</span>
                </a>

            </li>



            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle" aria-label="Toggle Sidebar"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column" style="margin-bottom: 55px;">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <button style="width: 115px" class="dropdown-item" onclick="changeLanguage('en-US')"><img style="width: 25px" src="~/img/us.svg" /> English</button>
                    <button style="width:115px" class="dropdown-item" onclick="changeLanguage('pl-PL')"><img style="width: 25px" src="~/img/pl.svg" /> Polish</button>
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - User Information -->
                        @await Html.PartialAsync("_LoginPartial")

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid" style="padding: 0 3.5rem">
                    <!-- Page Heading -->
                    <p class="mb-4">
                        @RenderBody()
                    </p>

                    <!-- Content Row -->
                    <div class="row" style="display: none;">
                        <div class="col-xl-8 col-lg-7">
                            <!-- Area Chart -->
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span style="padding-right: 15px;">&copy; 2024 - TravelAgencySystemWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
                        <span style="padding-right: 15px;"> @Localizer["PhoneFooter"]:  +48 123 456 789 </span>
                        <span style="padding-right: 15px;"> E-mail: kontakt@travel.com </span>
                        <span> @Localizer["AddressFooter"]:  ul. Zielona 1, 43-500 Czechowice-Dziedzice</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">@Localizer["LogOutBtn"]</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
<script>
    function changeLanguage(language) {
    $.ajax({
    url: '/Home/ChangeLanguage',
    type: 'POST',
    data: { language: language },
    success: function () {
    location.reload();
    }
    });
    }
</script>

</body>
</html>
