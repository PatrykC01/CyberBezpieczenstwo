@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model ZadanieASP1.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>@Localizer["Header1Customer"]</h1>

<div>
    <h4>@Localizer["Header4Customer"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["FirstName"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["LastName"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["PhoneNumber"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>
<div>

    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-primary btn-icon-split">
        <span class="icon text-white-50">
            <i class="fa-solid fa-pen-to-square"></i>
        </span>
        <span class="text">@Localizer["EditSpan"]</span>
    </a>

    <a class="btn btn-secondary btn-icon-split" asp-action="Index">
        <span class="icon text-white-50">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">@Localizer["BackSpan"]</span>
    </a>
</div>
