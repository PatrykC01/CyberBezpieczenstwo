@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model ZadanieASP1.Models.Reservation

@{
    ViewData["Title"] = "Edit";
}

<h1>@Localizer["Header1Reservation"]</h1>

<h4>@Localizer["Header4Reservation"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReservationID" />
            <div class="form-group">
                <label asp-for="TripID" class="control-label">@Localizer["TripID"]</label>
                <select asp-for="TripID" class="form-control" asp-items="ViewBag.TripID"></select>
                <span asp-validation-for="TripID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label">@Localizer["CustomerID"]</label>
                <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationDate" class="control-label">@Localizer["ReservationDate"]</label>
                <input asp-for="ReservationDate" class="form-control" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfDeparture" class="control-label">@Localizer["DateOfDeparture"]</label>
                <input asp-for="DateOfDeparture" class="form-control" />
                <span asp-validation-for="DateOfDeparture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfReturn" class="control-label">@Localizer["DateOfReturn"]</label>
                <input asp-for="DateOfReturn" class="form-control" />
                <span asp-validation-for="DateOfReturn" class="text-danger"></span>
            </div>
            <button type="submit" style=" margin: 15px;" class="btn btn-primary btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-solid fa-check"></i>
                </span>
                <span class="text">@Localizer["SaveSpan"]</span>

            </button>
        </form>
    </div>
</div>

<div style="margin: 15px 2.5px;">
    <a class="btn btn-secondary btn-icon-split" asp-action="Index">
        <span class="icon text-white-50">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">@Localizer["BackSpan"]</span>
    </a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
